<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:drawable="@drawable/ic_up_arrow_pressed"/>
            <item android:drawable="@drawable/ic_ring_pressed"/>
        </layer-list>
    </item>

    <item>
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:drawable="@drawable/ic_up_arrow_released"/>
            <item android:drawable="@drawable/ic_ring_released"/>
        </layer-list>
    </item>

</selector>